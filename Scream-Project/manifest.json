{
  "manifest_version": 2,
  "name": "Chrome Gnome",
  "description": "This extension improves your life.",
  "version": "1.0",
  "background": {
    "scripts": [
      "scripts/timers.js",
      "scripts/alarms.js",
      "scripts/timecheck.js",
      "scripts/bedtime.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Gnome"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "notifications",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
